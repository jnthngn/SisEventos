@model SisEventos.ViewModels.CursoVM

@{
    ViewData["Title"] = "Alteração do Curso";
}

<h1>Alteração de Curso</h1>

<div class="row">
    <form asp-controller="Cursos"
          asp-action="Edit"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Nome"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Nome" />
                <small class="text-danger" asp-validation-for="Nome"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Descricao"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Descricao" />
                <small class="text-danger" asp-validation-for="Descricao"></small>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-area="Admin"
                   asp-controller="Cursos"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>
