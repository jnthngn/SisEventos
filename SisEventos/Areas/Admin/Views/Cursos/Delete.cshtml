@model SisEventos.Models.Curso;
@{
    ViewData["Title"] = "Delete";
}

<h2>Apagar curso</h2>

<p>Tem certeza que quer apagar o Curso @Model.Nome ?</p>

<form asp-controller="Cursos" asp-action="Delete" method="post">
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a asp-area="Admin"
               asp-controller="Cursos"
               asp-action="Index"
               class="btn btn-default">Cancelar</a>
            <button type="submit"
                    class="btn btn-danger">
                Apagar
            </button>
        </div>
    </div>
</form>

